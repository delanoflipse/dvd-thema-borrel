@import "variables"

*
	box-sizing border-box
	
html, body
	width 100%
	height 100%
	margin 0
	padding 0
	// font-family "Roboto", sans-serif

body
	display block


.view
	position fixed
	left 0
	right 0
	top 0
	bottom 0
	z-index: 1000
	&.hide
		display none

.powerpoint-view
	background black
	span
		display block
		text-align: center
		padding 20px;
		color white
		font-family: sans-serif
		font-size: 12px

.stats
	position fixed
	left 200px
	right 200px
	bottom 0
	z-index: 2000
	background: rgba(0, 0, 0, 0.5)
	padding: 20px
	display: flex
	justify-content: center
	align-items: center
	color white
	font-size: 20px

	div
		padding: 0 10px
		font-family: sans-serif
		border-right: 1px solid white

		&:last-child
			border-right: none

		span.name
			color: #aaa
		span.value
			display: inline-block
			color: #fff
			font-weight: bold
			min-width: 3ch
			text-align: right

.dvd-view
	background black
	border: 1px solid white;

	#dvd-logo
		position fixed
		display block
		left 0
		right 0

svg.logo
	fill white
	width 153px * 1.2;
	height 69px * 1.2;

svg.line
	width 100%
	height 100%